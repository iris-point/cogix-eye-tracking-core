{
  "manifest_version": 3,
  "name": "Cogix Eye Tracking Recorder",
  "version": "1.0.0",
  "description": "Record your screen with synchronized eye tracking data, powered by Cogix",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting",
    "desktopCapture",
    "offscreen",
    "tabCapture",
    "cookies",
    "identity"
  ],
  "host_permissions": [
    "<all_urls>",
    "ws://localhost:8765/*",
    "ws://localhost:9000/*",
    "ws://127.0.0.1:8765/*",
    "ws://127.0.0.1:9000/*",
    "wss://localhost:8765/*",
    "https://app.cogix.com/*",
    "https://api.cogix.app/*",
    "https://data-io.cogix.app/*"
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["lib/eye-tracker-core.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "assets/icons/icon-16.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  }
}